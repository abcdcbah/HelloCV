{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenCV",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++ \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" $(pkg-config --cflags --libs opencv4)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 生成活动文件",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}